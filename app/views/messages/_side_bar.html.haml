.Side-bar
  .Side-bar__User-name
    .Side-bar__User-name__Top-items
      .Side-bar__User-name__Top-items--name
        = current_user.name
      .Side-bar__User-name__Top-items--icons
        = link_to new_group_path do
          = icon('far', 'edit', class: 'user-name-icon')
          %span<>
        = link_to edit_user_path(current_user.id) do
          = icon('fas', 'cog', class: 'user-name-icon')
          %span<>

  .Side-bar__Group-list
    - current_user.groups.each do |group|
      .Side-bar__Group-list__Box
        = link_to "#" do
          .Side-bar__Group-list__Box__group-name
            = group.name
          .Side-bar__Group-list__Box__last-message
            ラストメッセージ
      

    